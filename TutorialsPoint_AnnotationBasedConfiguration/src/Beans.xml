<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:annotation-config />

	<!-- ######################Annotation Based Configuration Required -->
	<!-- Definition for student bean -->
	<bean id="student"
		class="com.tutorialspoint.annotationbasedconfiguration.required.Student">
		<property name="name" value="Zara" />
		<property name="age" value="11" />
	</bean>

	<!-- Definition for textEditor bean without constructor-arg -->
	<bean id="textEditorSetter" class="com.tutorialspoint.annotationbasedconfiguration.autowired.TextEditorSetter">
	</bean>
	
	<bean id="textEditorAutoWiredProperties" class="com.tutorialspoint.annotationbasedconfiguration.autowired.TextEditorAutoWiredProperties">
	</bean>
	
	<bean id="textEditorConstructor" class="com.tutorialspoint.annotationbasedconfiguration.autowired.TextEditorConstructor">
	</bean>

	<!-- Definition for spellChecker bean -->
	<bean id="spellChecker" class="com.tutorialspoint.annotationbasedconfiguration.autowired.SpellChecker">
	</bean>

</beans>